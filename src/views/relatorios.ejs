<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style/style.css" />
  </head>
  <body>
    <%- include('partials/nav.ejs') %>

    <main class="mainrel">
      <h3>RELATÓRIOS</h3>
      <div class="block-rel">
        <div class="block-rel-up">
          <h4>Fabricantes</h4>
          <div class="block-itens">
            <div class="resultfor">
              <% for(ele in rel.fabricante){ %>
              <h5 class="tdh5"><%- ele %>:</h5>
              <% } %>
            </div>
            <div class="resultfor">
              <% for(ele in rel.fabricante){ %>
              <h5 class="tdh5"><%- rel.fabricante[ele] %></h5>
              <% } %>
            </div>
          </div>
        </div>
        <div class="block-rel-up">
          <h4>Data de Fabricação</h4>
          <div class="block-itens">
            <div class="resultfor">
              <% for(ele in rel.fabricacao){ %>
              <h5 class="tdh5"><%- ele %>:</h5>
              <% } %>
            </div>
            <div class="resultfor">
              <% for(ele in rel.fabricacao){ %>
              <h5 class="tdh5"><%- rel.fabricacao[ele] %></h5>
              <% } %>
            </div>
          </div>
        </div>
        <div class="block-rel-up">
          <h4>Carros em Estoque</h4>
          <div class="block-itens">
            <div class="resultfor">
              <h5 class="tdh5">Quantidade:</h5>
            </div>
            <div class="resultfor">
              <h5 class="tdh5"><%= rel.naovendidos %></h5>
            </div>
          </div>
        </div>
      </div>
    </main>
    <div class="mainrel">
      <h4>Carros em Estoque</h4>
      <div>
        <table class="table table-hover" id="tablepess">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Veiculo</th>
              <th scope="col">Marca</th>
              <th scope="col">Ano</th>
              <th scope="col">Vendido</th>
              <th scope="col">Descrição</th>
              <th scope="col">Data Cadastro</th>
              <th scope="col">Ultima Edição</th>
              <th class="td-action" scope="col">Vender</th>
              <th class="td-action" scope="col">Editar</th>
              <th class="td-action" scope="col">Excluir</th>
            </tr>
          </thead>
          <tbody>
            <% rel.id_estoque.forEach((obj) => { %>
            <tr>
              <td><%= obj.id %></td>
              <td><%= obj.veiculo %></td>
              <td><%= obj.marca %></td>
              <td><%= obj.ano %></td>
              <% if(obj.vendido == 'false'){ %>
              <td><%= "não" %></td>
              <% } else {%>
              <td><%= "sim" %></td>
              <% } %>
              <td><%= obj.descricao %></td>
              <td><%= obj.created %></td>
              <td><%= obj.updated %></td>
              <td class="td-action">
                <a id="vender" href="/vender/<%= obj.id %>">$$</a>
              </td>
              <td class="td-action">
                <a id="edit" href="/editar/<%= obj.id %>"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-pencil-square"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                    />
                    <path
                      fill-rule="evenodd"
                      d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                    />
                  </svg>
                </a>
              </td>
              <td class="td-action">
                <a id="delete" href="/delete/<%= obj.id %>">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-trash3"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"
                    />
                  </svg>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
